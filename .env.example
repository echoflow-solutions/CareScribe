# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Use Supabase for all data storage (REQUIRED)
# Set to false to use Supabase, true for local storage (demo only)
NEXT_PUBLIC_USE_LOCAL_STORAGE=false

# AI Provider Configuration (OPTIONAL - needed for AI features)
# Choose between 'openai', 'anthropic', or 'gpt-3.5'
NEXT_PUBLIC_AI_PROVIDER=openai

# API Key for your chosen provider
# For OpenAI: Get your key from https://platform.openai.com/api-keys
# For Anthropic: Get your key from https://console.anthropic.com/
AI_API_KEY=your_api_key_here

# Optional: Custom API base URL (for OpenAI-compatible endpoints)
# AI_BASE_URL=https://api.openai.com/v1